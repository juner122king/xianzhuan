<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CustomBottomNavigationView" parent="Widget.Design.BottomNavigationView">
        <item name="android:paddingTop">1dp</item> <!-- 自定义上边距 -->
        <item name="android:paddingBottom">1dp</item> <!-- 自定义下边距 -->
        <item name="android:paddingStart">10dp</item> <!-- 自定义左边距 -->
        <item name="android:paddingEnd">10dp</item> <!-- 自定义右边距 -->
    </style>

    <style name="backDialog" parent="@style/Base.V7.Theme.AppCompat.Light.Dialog">
        <item name="android:backgroundDimEnabled">false</item><!--activity不变暗-->
        <!--dialog自身的底板-->
        <item name="android:windowBackground">@android:color/transparent</item>

    </style>

    <style name="tabLayout" parent="Widget.MaterialComponents.TabLayout">
        <item name="android:textSize">16sp</item>
    </style>
    <style name="NoClickEffectTabLayout" parent="Widget.Design.TabLayout">
        <item name="android:stateListAnimator">@null</item>
    </style>
</resources>