<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="20dp"
    android:gravity="end"
    android:orientation="vertical">


    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#F1F1F1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_marginStart="15dp"

            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_step"
                android:layout_width="55dp"
                android:layout_height="wrap_content"
                android:background="@drawable/icon_long_step_view1"
                android:gravity="center"
                android:text="奖励1"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/tv_stepAmount"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/radius_border_bo"
                android:gravity="center_vertical"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:text="按要求完成任务，奖励"
                android:textColor="@color/black2"
                android:textSize="13sp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/tv_stepAmount2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_lt_s1" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_task_verify"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/radius_border"
        android:descendantFocusability="beforeDescendants" />

    <TextView
        android:id="@+id/tv_long_task_repick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="55dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/radius_border_button2_red"
        android:paddingStart="20dp"
        android:paddingTop="8dp"
        android:paddingEnd="20dp"
        android:paddingBottom="8dp"
        android:text="修改后再次提交"
        android:visibility="gone"
        android:textColor="@color/white"
        android:textSize="15sp" />
</LinearLayout>