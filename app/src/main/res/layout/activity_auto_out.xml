    android:orientation="vertical"
    android:padding="15dp"
    tools:context=".ui.views.AutoOutActivity">


    <include layout="@layout/custom_logo_view" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
