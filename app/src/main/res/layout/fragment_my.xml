                    android:padding="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="客户服务"
                        android:textColor="@color/black2"
                        android:textSize="14sp"
                        android:textStyle="bold" />

