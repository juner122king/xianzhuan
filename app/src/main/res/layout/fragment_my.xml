                        android:layout_marginStart="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/bg_cash" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/radius_border"
