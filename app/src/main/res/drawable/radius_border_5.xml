<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
    solid : 背景填充
    corners ：圆角 (可单独设置圆角）
    stroke ：边框（可设置边框宽度和颜色）
    padding ：内边距
    gradient ：渐变色（背景）
    size ：大小 -->
    <solid android:color="@color/white" />


    <!--  圆角 <corners android:radius="15dp"/>-->
    <corners
        android:radius="5dp" />


    <!-- 边框（可设置边框宽度和颜色）  -->
    <stroke
        android:width="1dp"
        android:color="#eeeeee" />

</shape>